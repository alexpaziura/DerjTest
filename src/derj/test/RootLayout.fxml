   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Файл">
            <items>
              <MenuItem fx:id="miClose" mnemonicParsing="false" onAction="#handleClose" text="Закрити" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Допомога">
            <items>
              <MenuItem fx:id="miAbout" mnemonicParsing="false" onAction="#handleAbout" text="Про" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
